@{
    ViewData["Title"] = "Tienda de Periféricos";
}

<!-- Banner superior -->
<header class="bg-dark text-white py-5 text-center">
    <h1 class="mb-0">¡Bienvenido a nuestra tienda de periféricos!</h1>
</header>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold" href="#">Periféricos</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link active" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Productos</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Conócenos</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Login</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- Contenido principal -->
<main class="container my-5">

    <!-- Imagen publicitaria -->
    <section class="mb-5 text-center">
        <img src="https://via.placeholder.com/900x300" class="img-fluid rounded" alt="Publicidad principal">
    </section>

    <!-- Productos destacados -->
    <section class="mb-5">
        <h2 class="text-center mb-4 border-bottom pb-2">Conocé nuestros productos destacados</h2>
        <div class="row g-4">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title">Producto @i</h5>
                            <p class="card-text">Descripción breve del producto @i.</p>
                            <a href="#" class="btn btn-primary">Ver más</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Información destacada -->
    <section class="row text-center g-4">
        <div class="col-md-4">
            <div class="border rounded p-4 h-100">
                <div class="mb-2 fs-1">💳</div>
                <h5>Hasta 12 cuotas</h5>
                <p>Abonando con tarjetas de crédito</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border rounded p-4 h-100">
                <div class="mb-2 fs-1">🚚</div>
                <h5>Envíos a todo el país</h5>
                <p>A través de OCA</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border rounded p-4 h-100">
                <div class="mb-2 fs-1">🛡️</div>
                <h5>Garantía oficial</h5>
                <p>De hasta 36 meses en todos los productos</p>
            </div>
        </div>
    </section>

</main>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-4 mt-5">
    <p class="mb-1">&copy; 2025 Tienda de Periféricos. Todos los derechos reservados.</p>
    <p class="mb-0">Contacto: info@tiendaperifericos.com</p>
</footer>